@model IEnumerable<Agilisium.TalentManager.WebUI.Models.EmployeeVisaModel>

@{
    ViewBag.Title = "Visa Holding Employees Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Visa Holding Employees Report";
}

<div class="panel panel-default">
    <div style="text-align:center" class="panel-heading">
        <h3><b>Visa Holding Employees Report</b></h3>
    </div>
    <div class="panel-body">
        <table style="width:100%" class="table table-striped table-condensed table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.POD)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AllocationType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrimarySkills)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SecondarySkills)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VisaCategory)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.VisaValidity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TravelledCountries)
                </th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.ActionLink(item.EmployeeName, "View", "Employee", new { id = item.EmployeeEntryID })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.POD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AllocationType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimarySkills)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondarySkills)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VisaCategory)
                </td>
                <td class="text-right">
                    @if (item.VisaValidity.HasValue)
                    {
                        <text>@item.VisaValidity.Value.ToString("dd/MMM/yyyy")</text>
                    }
                    else
                    {
                        <text> &nbsp;</text>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TravelledCountries)
                </td>
            </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Back to Reports Index", "Index", null, new { @class = "btn btn-default" })
    </div>
</div>