@using Agilisium.TalentManager.WebUI.Helpers

@model Agilisium.TalentManager.WebUI.Models.EmpSkillSummaryViewModel

@{
    ViewBag.Title = "Employee Skillset Summary";
}

<div class="panel panel-default">
    <div style="text-align:center" class="panel-heading">
        <h3><b>Employee Skillset Summary</b></h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("List", "BuzAssets", new { findBy = Model.ETech }))
        {
            <table style=" align-self:center; ">
                <tr>
                    <td width="40%">
                        @Html.TextBoxFor(model => model.ETech, new { @class = "form-control" })
                    </td>
                    <td width="5px"></td>
                    <td>
                        <input type="submit" class="btn btn-primary" value="Find All Employees by Technology" />
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                </tr>
            </table>
            <div>
                <table class="table table-striped table-condensed table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpSkillSummaries.FirstOrDefault().EmployeeID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpSkillSummaries.FirstOrDefault().EmployeeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpSkillSummaries.FirstOrDefault().ExpertSkills)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpSkillSummaries.FirstOrDefault().ProfSkills)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpSkillSummaries.FirstOrDefault().AdvanceSkills)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpSkillSummaries.FirstOrDefault().BasicSkills)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpSkillSummaries.FirstOrDefault().LimitedSkills)
                        </th>
                    </tr>

                    @foreach (var entry in Model.EmpSkillSummaries)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => entry.EmployeeID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => entry.EmployeeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => entry.ExpertSkills)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => entry.ProfSkills)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => entry.AdvanceSkills)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => entry.BasicSkills)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => entry.LimitedSkills)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
    </div>
    <div class="panel-footer">
        <div class="btn-group pull-right">
            @Html.AddPagination(Model.PagingInfo, x => Url.Action("List", new { findBy = Model.ETech, page = x }))
        </div>
    </div>
</div>
